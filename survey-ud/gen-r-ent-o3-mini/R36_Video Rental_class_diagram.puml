@startuml
' The Entity class represents a basic domain object
class Entity {
  - id: int
  - name: String
  - description: String
  + addAttribute(attr: Attribute): void
  + removeAttribute(attr: Attribute): void
  + getAttributes(): List<Attribute>
}

' The Attribute class represents properties that can be associated with an Entity.
class Attribute {
  - key: String
  - value: String
  + getKey(): String
  + getValue(): String
  + setValue(value: String): void
}

' The Relationship class defines an association between two Entity objects.
class Relationship {
  - relationType: String
  - source: Entity
  - target: Entity
  + getRelationType(): String
  + getSource(): Entity
  + getTarget(): Entity
}

' The EntityRepository is a container that handles a collection of Entity instances.
class EntityRepository {
  - entities: List<Entity>
  + addEntity(e: Entity): void
  + removeEntity(e: Entity): void
  + findEntity(id: int): Entity
}

' Associations:
Entity "1" -- "*" Attribute : "has"
EntityRepository "1" -- "*" Entity : "contains"
Relationship "1" --> "1" Entity : "source"
Relationship "1" --> "1" Entity : "target"
@enduml