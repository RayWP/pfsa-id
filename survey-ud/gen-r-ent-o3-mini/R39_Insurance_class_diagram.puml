@startuml

' Base class for common attributes and methods
class PhysicalObject {
  - name : String
  - info : String
  - details : String
  - attributes : List<String>
}

' Person inherits common physical attributes,
' and has policies.
class Person {
  - policies : List<Policy>
  + addPolicy(p : Policy) : void
}
Person --|> PhysicalObject

' Policy inherits PhysicalObject and holds contacts and dwellings.
class Policy {
  - contacts : List<ContactPoint>
  - dwellings : List<Dwelling>
}
Policy --|> PhysicalObject

' Party represents a grouping of persons.
class Party {
  - persons : List<Person>
}
Party --|> PhysicalObject

' Although not used in the redesigned Policy,
' we include the Vehicle class as indicated in the requirements.
class Vehicle {
  - model : String
}
Vehicle --|> PhysicalObject

' ContactPoint class.
class ContactPoint {
  - contactDetail : String
}
ContactPoint --|> PhysicalObject

' Dwelling class.
class Dwelling {
  - address : String
}
Dwelling --|> PhysicalObject

' Relationships:
' A Person aggregates Policies.
Person "1" o-- "many" Policy : policies

' A Policy aggregates ContactPoints and Dwellings.
Policy "1" o-- "many" ContactPoint : contacts
Policy "1" o-- "many" Dwelling : dwellings

' A Party aggregates Persons.
Party "1" o-- "many" Person : persons

@enduml